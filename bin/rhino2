#!/usr/bin/env ruby

require 'rubygems' unless defined?(Gem)
require 'bundler/setup' if %w(Gemfile .components).all? { |f| File.exist?(f) }

rhino_cli_path = File.expand_path('../../cli', __FILE__)
rhino_lib_path = File.expand_path('../../lib', __FILE__)

$:.unshift(rhino_cli_path) if File.directory?(rhino_cli_path) && !$:.include?(rhino_cli_path)
$:.unshift(rhino_lib_path) if File.directory?(rhino_lib_path) && !$:.include?(rhino_lib_path)

require 'rhino/base'


Rhino::Cli::Base.start(ARGV)
