#!/usr/bin/env ruby

require 'rubygems' unless defined?(Gem)
require 'bundler/setup' if %w(Gemfile .components).all? { |f| File.exist?(f) }

rhion_core_path = File.expand_path('../../lib', __FILE__)
$:.unshift(rhion_core_path) if File.directory?(rhion_core_path) && !$:.include?(rhion_core_path)

require 'rhion/cli/base'
require 'rhion.rb'
Rhion::Cli::Base.start(ARGV)